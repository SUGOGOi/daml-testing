import Daml.Script

--Q1
data Person = Person with
    name: Text
    email: Text
        deriving(Show, Eq, Ord)

--Q2
class Reachable a where
    reachOut: a -> Text

instance Reachable Person where
    reachOut person = "Hello " <> person.name <> " at " <> person.email


